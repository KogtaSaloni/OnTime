<h1>Listing on_times</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @on_times.each do |on_time| %>
      <tr>
        <td><%= on_time.Task %></td>
        <td><%= on_time.Deadline %></td>
        <td><%= link_to 'Show', on_time %></td>
        <td><%= link_to 'Edit', edit_on_time_path(on_time) %></td>
        <td><%= link_to 'Destroy', on_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New On time', new_on_time_path %>
