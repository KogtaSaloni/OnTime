<% if current_user %>
<h2>Latest OnTimes</h2>
<table style="width: 100%">
<thead>
<tr>
<th>Deadline</th>
</tr>
</thead>
 
<tbody>
<% @bookmarks.each do |bookmark| %>
<tr>
<td><%= bookmark.Task %></td>
</tr>
<% end %>
</tbody>
</table>
 
<% else %>
<div class="panel">
<h1>List down your itinerary here :D!</h1>
<p>A simple app to track your to-do list.</p>
<%= link_to "Get started today", new_user_registration_path, :class => "button button-large" %>
</div>
 
<hr>
 
<div class="row">
<div class="large-8 columns">
<h3>By Saloni Kogta</h3>
<p>
This app is based on RoR.
</p>
<p><a class="" href="http://github.com/KogtaSaloni" target="_blank">Learn more</a>.</p>
</div>
</div>
<% end %> 